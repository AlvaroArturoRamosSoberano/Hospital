<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuDoctor"
    android:background="@color/ColorGris">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="Bienvenido Doctor"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/img_btn_Datos"
            android:layout_width="191dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@color/ColorGris"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/nurse" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informacion personal"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="50dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_btn_Citas"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:background="@color/ColorGris"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/date" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:text="Citas Pendientes"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/textView" />
    </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_marginStart="100dp"
            app:srcCompat="@drawable/doctor3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:textColor="@color/colorWhite"
        android:text="Usa en todo momento cubrebocas" />


</androidx.appcompat.widget.LinearLayoutCompat>