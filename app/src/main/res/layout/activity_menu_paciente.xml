<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPaciente"
    android:background="@color/ColorGris">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="20dp"
            android:text="Bienvenido paciente"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/img_btn_DatosPaciente"
            android:layout_width="153dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@color/ColorGris"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/patient" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informacion personal"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="50dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_btn_CitasPaciente"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="20dp"
            android:background="@color/ColorGris"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/notebook" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:text="Citas agendadas"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/textView" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="100dp"
        app:srcCompat="@drawable/distancia" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:gravity="center"
        android:text="Conserva susana distancia"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

</androidx.appcompat.widget.LinearLayoutCompat>